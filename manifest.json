{
  "manifest_version": 3,
  "name": "My Edge Extension",
  "description": "A simple Microsoft Edge extension.",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "tabs", "scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
